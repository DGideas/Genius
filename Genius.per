;判断进攻条件

(defrule
(military-population >= armynum)
(not (town-under-attack));城镇没有收到攻击
=>
(set-goal attackstat 2)
)

(defrule
(military-population < armynum)
(goal attackstat 2);攻击过,被击退了
=>
(set-goal attackstat 3)
)

(defrule
(military-population < 5)
(goal attackstat 4);攻击过,被击退了
=>
(set-goal attackstat 3)
)


